@model TheCause.Models.Petition

@{
    ViewData["Title"] = "Edit";
}



<div class="container" style="margin-top:120px">
      <div class="message">@ViewBag.message</div>
<div class="row mt-5">
    <div class="col-md-5">
         <div class="form-group">
                 

                    <img class="" src="@ViewBag.PhotoUrl" alt="" width="370">
                    <span asp-validation-for="PhotoUrl" class="text-danger"></span>
                </div>
    </div>
    <div class="col-md-7">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.Hidden("UpdatedAt")
               

            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                
                    <textarea asp-for="Description" class="form-control" rows="6" cols="4" id="mytextarea"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NSignature" class="control-label"></label>
                <input asp-for="NSignature" class="form-control"/>
                <span asp-validation-for="NSignature" class="text-danger"></span>
            </div>
             <div class="form-group">
                
                <input asp-for="CreatedAt" class="form-control" hidden/>
        
            </div>
                <div class="form-group">

                <input asp-for="UserId" class="form-control" hidden/>

            </div>
           

           <div class="form-group">
                        <p>Upload new photo:</p>
                      <input type="file" name="file" asp-for="PhotoUrl"/>
                    </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
   
</div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
