@model TheCause.Models.Petition

@{
    ViewData["Title"] = "Create";
}



<div class="container" style="margin-top:120px">
<div class="row mt-5">
    <div class="col-md-7">
            <span>@ViewBag.progressMessage</span>
        <!-- ALERT END -->
        <h1 class="display-4 fw-bold lh-1 mb-3">Create Petition</h1>
        <h1 class="display-4 fw-bold lh-1 mb-3">Begin your petition</h1>
        <p class="col-lg-10 fs-4">
            Become part of one of the largest communities of online activists.
        </p>
    </div>
    <div class="col-md-5">
        <form asp-action="Create" enctype="multipart/form-data" class="p-4 p-md-2 border rounded-3 bg-light">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @Html.Hidden("UpdatedAt")
            @Html.Hidden("CreatedAt")
            @Html.Hidden("UserId")

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea rows="4" asp-for="Description" class="form-control" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <label asp-for="NSignature" class="control-label"></label>
                    <input asp-for="NSignature" class="form-control" />
                    <span asp-validation-for="NSignature" class="text-danger"></span>
                </div>
            <div class="form-group">
                        <p>Upload photo(Optional):</p>
                        <input type="file" name="file" asp-for="PhotoUrl"/>
                    </div>
            
           
            <div class="form-group">
                <input type="submit" value="Create" class="w-100 btn btn-lg btn-primary" />
            </div>
        </form>
    </div>
   
</div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
