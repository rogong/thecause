@model IEnumerable<TheCause.Models.Petition>
@{
    ViewData["Title"] = "Home Page";
}

<section class="Hero secondaryColor" style="margin-bottom:0px;">
    
    <div class="px-4 py-5 my-5 text-center">
        @if(@TempData["Message"] != null)
            {
                <div class="alert alert-danger  alert-dismissible" role="alert">
                @TempData["Message"]
               </div>            
        }

        
        <h1 class="display-5 fw-bold">Make a Better World</h1>
        <div class="col-lg-6 mx-auto">
            <p class="lead mb-4">
                ... append the signature now
            </p>

            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                <a asp-area="Identity" asp-page="/Account/Register">
                    <button type="button" class="btn text-white btn-lg px-4 gap-3 mt-8">
                        Get Started
                    </button>
                </a>

            </div>
        </div>
    </div>
</section>


<section>
  
    <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center rounded-3 ">
        <div class="col-lg-6 p-3 p-lg-5 pt-lg-3">
            <h1 class="display-4 fw-bold lh-1">The Cause</h1>
            <p class="lead" style="text-align:justify;">To raise awareness and campaign against cunning tax evasion, exploitative labour tactics, racism, disrespect for environmental effect, and other immoral commercial and political behaviours.</p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-4 mb-lg-3">
                <button type="button" class="btn btn-primary btn-lg px-4 me-md-2 fw-bold"> Get Started</button>
                <!-- <button type="button" class="btn btn-outline-secondary btn-lg px-4">Default</button> -->
            </div>
        </div>
        <div class="col-lg-5 p-0 overflow-hidden">
            <img class="rounded-lg-3" src="images/p5.png" alt="" width="600">
        </div>
    </div>
</section>

<section class="feature">
    <div class="row p-8 mt-4">
        <div class="col-lg-4"></div>
        <div class="col-lg-4 align-items-center">
            <h1>Featured Cause</h1>
        </div>
        <div class="col-lg-4"></div>
    </div>

    @foreach (var item in Model)
            { 
    <div class="row p-8 mt-4">
        <div class="col-lg-2"></div>
        <div class="col-lg-4 ">
          
                <img class="" src="@Html.DisplayFor(modelItem => item.PhotoUrl)" alt="" width="370" style="object-fit:cover">
        </div>

        <div class="col-lg-6 p-3 p-lg-5 pt-lg-3">
            <h4><a style = "color:darkblue" asp-controller="Petitions" asp-action="Details"
                            asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.Title)</a></h4>
                <p align ="justify">@Html.DisplayFor(modelItem => item.Description)</p>
            <div class="row">

                    <span class="col-lg-4"><b>@Html.DisplayFor(modelItem => item.Signs.Count) people have signed.</b> Let's hit @Html.DisplayFor(modelItem => item.NSignature) !</span>

                <button type="button" class="btn text-white btn-lg px-4 gap-3   ">
                        <a style = "color:white; text-decoration:none;" asp-controller="Petitions" asp-action="Details"
                       asp-route-id="@item.Id">
                            Sign this cause
                        </a>
                </button>


            </div>
        </div>
        <div class="col-lg-2"></div>
    </div>
    }
  
</section>
@section Scripts{

        <script>

            //Dislay error alert and fade it
            $(".alert-dismissible").fadeTo(4000, 500).slideUp(500, function () {
                $(".alert-dismissible").alert('close');
            });
        </script>
}